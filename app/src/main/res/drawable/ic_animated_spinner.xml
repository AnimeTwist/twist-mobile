<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
  <aapt:attr name="android:drawable">
    <vector
        android:name="vector"
        android:width="28dp"
        android:height="28dp"
        android:viewportWidth="28"
        android:viewportHeight="28">
      <path
          android:name="bg"
          android:pathData="M 14 0 H 14 A 14 14 0 0 1 28 14 V 14 A 14 14 0 0 1 14 28 H 14 A 14 14 0 0 1 0 14 V 14 A 14 14 0 0 1 14 0 Z"
          android:fillColor="#000"
          android:fillAlpha="0.8" />
      <group
          android:name="fill"
          android:pivotX="14"
          android:pivotY="14">
        <path
            android:name="path"
            android:pathData="M 14 6 L 12 14 C 12.2 16.67 15.8 16.67 16 14 Z"
            android:fillColor="#ffffff"
            android:strokeWidth="1"/>
      </group>
    </vector>
  </aapt:attr>
  <target android:name="fill">
    <aapt:attr name="android:animation">
      <objectAnimator
          android:propertyName="rotation"
          android:valueFrom="0"
          android:valueTo="360"
          android:duration="1000"
          android:valueType="floatType"
          android:repeatCount="-1"
          android:interpolator="@android:anim/linear_interpolator"/>
    </aapt:attr>
  </target>
</animated-vector>